{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "node12",
    "moduleResolution": "Node",
    "types": ["@citizenfx/server", "@citizenfx/client", "node"],
    "baseUrl": "src",
    "paths": {
      "#shared/*": ["shared/*"],
      "#client/*": ["client/*"],
      "#server/*": ["server/*"]
